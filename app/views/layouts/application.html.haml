!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      - if content_for? :title
        = yield :title
      - else
        Rails7elm
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", defer: true
    = javascript_importmap_tags

    - turboval = yield(:body_turbo) if content_for?(:body_turbo)
  %body{'data-turbo': turboval}
    -# this is the best way to avoid troubles on pages leading to Elm widgets
    = link_to 'Home', root_path, 'data-turbo': 'false'
    \|
    = link_to 'Uploads', uploads_path
    %hr
    %p.notice= notice
    %p.alert= alert

    = yield
